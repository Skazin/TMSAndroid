<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@+id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="io.techmeskills.an02onl_plannerapp.screen.main.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/toNewFragment"
            app:destination="@+id/newFragment"/>
        <action
            android:id="@+id/toEditFragment"
            app:destination="@+id/editFragment" />
    </fragment>

    <fragment
        android:id="@+id/newFragment"
        android:name="io.techmeskills.an02onl_plannerapp.screen.newscreen.NewFragment"
        android:label="NewFragment"
        tools:layout="@layout/add_new_text"/>

    <fragment
        android:id="@+id/editFragment"
        android:name="io.techmeskills.an02onl_plannerapp.screen.newscreen.EditFragment"
        android:label="EditFragment"
        tools:layout="@layout/edit_card">
        <argument
            android:name="note"
            app:argType="io.techmeskills.an02onl_plannerapp.models.Note"
            app:nullable="true" />
    </fragment>
</navigation>